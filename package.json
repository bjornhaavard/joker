{
  "name": "joker",
  "version": "0.2.0",
  "description": "application that makes jokes",
  "type": "module",
  "main": "src/index.js",
  "scripts": {
    "test": "node src/js/joker.test.js",
    "format": "prettier -w src/**/*.js",
    "lint": "eslint src/**/*.js",
    "lint-fix": "eslint src/**/*.js --cache --fix",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bjornhaavard/joker.git"
  },
  "keywords": [
    "jokes"
  ],
  "author": "bjørn håvard <bjornhaavard@hotmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/bjornhaavard/joker/issues"
  },
  "homepage": "https://github.com/bjornhaavard/joker#readme",
  "devDependencies": {
    "eslint": "^8.56.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.2.2"
  },
  "dependencies": {
    "give-me-a-joke": "^0.5.1"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.html": [
      "prettier --write"
    ],
    "*.scss": [
      "prettier --write"
    ]
  }
